@{    ViewBag.Title = "TourInfo";}@model Visitalia.Models.Tour<main>    <div class="image-slide">        <div class="swiper">            <div class="swiper-wrapper">                @foreach (var image in System.IO.Directory.GetFiles(Server.MapPath($"~/Images/{Model.Location}")))                {    <div class="swiper-slide">        <img src="@Url.Content($"~/Images/{Model.Location}/{Path.GetFileName(image)}")" />    </div>}            </div>            <div class="swiper-pagination"></div>            <div class="swiper-button-prev"></div>            <div class="swiper-button-next"></div>        </div>    </div>    <div class="container">        <div class="row row-cols-1 row-cols-md-2 align-items-md-center g-5 py-5">            <div class="col">                <div class="row row-cols-1 row-cols-sm-2 g-4">                    <div class="col d-flex flex-column gap-2">                        <h4 class="fw-semibold mb-0 text-body-emphasis">Location</h4>                        <p class="text-body-secondary">@Model.Location</p>                    </div>                    <div class="col d-flex flex-column gap-2">                        <h4 class="fw-semibold mb-0 text-body-emphasis">Price</h4>                        <p class="text-body-secondary">€@Model.Price</p>                    </div>                    <div class="col d-flex flex-column gap-2">                        <h4 class="fw-semibold mb-0 text-body-emphasis">Date</h4>                        <p class="text-body-secondary">@Model.Date.ToString("dd/MM/yyyy")</p>                    </div>                    <div class="col d-flex flex-column gap-2">                        <h4 class="fw-semibold mb-0 text-body-emphasis">Quota</h4>                        <p class="text-body-secondary">@Model.Quota</p>                    </div>                    <div class="col d-flex flex-column gap-2">                        <h4 class="fw-semibold mb-0 text-body-emphasis">Available</h4>                        <p class="text-body-secondary">                            <span class="@(Model.Available ? "text-success" : "text-danger")">                                @(Model.Available ? "Yes, Reserve it now!" : "No, Please try again later!")                            </span>                        </p>                    </div>                    <div class="col d-flex flex-column gap-2">                        <h4 class="fw-semibold mb-0 text-body-emphasis">Quota Left</h4>                        <p class="text-body-secondary">@(@Model.Quota - @Model.Sold)</p>                    </div>                    <div class="col-md-offset-2 col-md-10">                        @if (Model.Available)                        {                <button type="button" class="btn btn-secondary mx-2" data-bs-toggle="modal" data-bs-target="#reservationModal">                    Reserve                </button>                <div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">                    <div class="modal-dialog">                        <div class="modal-content">                            <div class="modal-header">                                <h5 class="modal-title" id="reservationModalLabel">Reserve Your Spot</h5>                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>                            </div>                            <div class="modal-body">                                <form id="reservationForm" action="/Reservation/Create" method="post">                                    <div class="mb-3">                                        <label for="reservationCount" class="form-label">Number of People</label>                                        <input type="number" class="form-control" id="reservationCount" name="reservationCount" min="1" max=@(@Model.Quota - @Model.Sold) required>                                    </div>                                    <p>Price: €<span id="price">0</span></p>                                    <script>                                            var pricePerPerson = @Model.Price;                                            document.getElementById('reservationCount').addEventListener('input', function() {                                                var reservationCount = this.value;                                                var totalPrice = pricePerPerson * reservationCount;                                                document.getElementById('price').innerText = totalPrice;                                            });                                    </script>                                    <h4 class="mb-3">Payment</h4>                                    <div class="row gy-3">                                        <div class="col-md-6">                                            <label for="cc-name" class="form-label">Name on card</label>                                            <input type="text" class="form-control" id="cc-name" placeholder="" required>                                            <small class="text-body-secondary">Full name as displayed on card</small>                                            <div class="invalid-feedback">                                                Name on card is required                                            </div>                                        </div>                                        <div class="col-md-6">                                            <label for="cc-number" class="form-label">Credit card number</label>                                            <input type="text" class="form-control" id="cc-number" minlength="16" maxlength="16" placeholder="" required>                                            <div class="invalid-feedback">                                                Credit card number is required                                            </div>                                        </div>                                        <div class="col-md-6">                                            <label for="cc-expiration" class="form-label">Expiration</label>                                            <input type="month" class="form-control" id="cc-expiration" placeholder="" required>                                            <div class="invalid-feedback">                                                Expiration date required                                            </div>                                        </div>                                        <div class="col-md-3">                                            <label for="cc-cvv" class="form-label">CVV</label>                                            <input type="text" class="form-control" id="cc-cvv" maxlength="3" pattern="\d{3}" placeholder="CVV" required>                                            <div class="invalid-feedback">                                                Security code required                                            </div>                                        </div>                                    </div>                                    <input type="hidden" name="tourId" value="@Model.ID" />                                </form>                            </div>                            <div class="modal-footer">                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>                                <button type="submit" class="btn btn-primary" form="reservationForm">Reserve</button>                            </div>                        </div>                    </div>                </div>            }                        <a class="btn btn-secondary mx-2" href="~/Home/TourList">Back to List</a>                    </div>                </div>            </div>            <div class="col d-flex flex-column align-items-start gap-2">                <h2 class="fw-bold text-body-emphasis">Description</h2>                <p class="text-body-secondary">@Model.Description</p>            </div>        </div>    </div></main>