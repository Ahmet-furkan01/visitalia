@{    ViewBag.Title = "TourList";    Layout = "~/Views/Shared/_Layout.cshtml";}@model IEnumerable<Visitalia.Models.Tour><main>    <div class="container">        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">            @foreach (var Tours in Model)             {                <div class="col">                    <div class="card shadow-sm">                        <div class="bd-placeholder-img card-img-top">                            <div class="image-slide">                                <div class="swiper">                                    <div class="swiper-wrapper">                                        @foreach (var image in System.IO.Directory.GetFiles(Server.MapPath($"~/Images/{Tours.Location}")))                                        {                        <div class="swiper-slide">                            <img src="@Url.Content($"~/Images/{Tours.Location}/{Path.GetFileName(image)}")" />                        </div>                    }                                    </div>                                    <div class="swiper-pagination"></div>                                </div>                            </div>                        </div>                        <div class="card-body">                            <div class="card-text">                                <table>                                    <tr>                                        <td class="text-danger font-weight-bold mt-4">@Tours.Location</td>                                        <td>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>                                        <td class="text-danger font-weight-bold mt-4">Price: €@Tours.Price</td>                                    </tr>                                    <tr>                                        <td class="text-danger font-weight-bold mt-4">Date: @Tours.Date.ToString("dd/MM/yyyy")</td>                                        <td>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</td>                                        <td class="text-danger font-weight-bold mt-4">Duration: @Tours.Duration Days</td>                                    </tr>                                </table>                            </div>                            <div class="d-flex justify-content-between align-items-center">                                <button type="button" class="btn btn-secondary mx-2" onclick="window.location.href='/Home/TourInfo/@Tours.ID'">Show Details</button>                                <b class="text-body-secondary">                                <span class="@(Tours.Available ? "text-success" : "text-danger")">                                    @(Tours.Available ? "Available" : "It's full")                                </span></b>                            </div>                        </div>                    </div>                    <br /><br /><br />                </div>             }        </div>    </div></main>