@model Visitalia.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title" class="d-flex justify-content-center align-items-center">
    <div class="container">
        <h2 id="title" class="text-center mb-4">Sign Up</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-center">Create a new account</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="mb-3">
                        @Html.LabelFor(m => m.FirstName, "Name", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", style = "max-width: 100%;" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.LastName, "Surname", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", style = "max-width: 100%;" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Gender, "Gender", new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female" }), "Select Gender", new { @class = "form-control", style = "max-width: 100%;" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "max-width: 100%;" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "max-width: 100%;" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "max-width: 100%;" })
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Sign Up" class="btn btn-outline-dark" />
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}